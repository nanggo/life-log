{
	"name": "sveltekit-blog-template",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "node scripts/optimize-local-images.js && node scripts/generate-post-metadata.js && vite build",
		"post": "vite-node scripts/create-post.ts",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint --ignore-path .gitignore .",
		"format": "prettier --write .",
		"seo:validate": "node scripts/seo-validation.js",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"analyze": "npx vite-bundle-analyzer .svelte-kit/output/client",
		"prepare": "husky"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^5.7.2",
		"@sveltejs/kit": "2.5.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/typography": "^0.5.7",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/svelte": "^4.2.3",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^24.0.15",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"@vcarl/remark-headings": "^0.0.1",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "3.2.4",
		"autoprefixer": "^10.4.8",
		"cssnano": "^5.1.13",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-svelte": "^2.35.1",
		"fs-extra": "^11.3.0",
		"glob": "^11.0.3",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.2",
		"mdsvex": "^0.11.0",
		"mdsvex-relative-images": "^1.0.3",
		"postcss": "^8.4.16",
		"postcss-load-config": "^4.0.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"rehype-autolink-headings": "^5.1.0",
		"rehype-slug": "^4.0.1",
		"remark-reading-time": "^1.0.1",
		"sharp": "^0.34.3",
		"svelte": "4.2.12",
		"svelte-check": "^4.2.2",
		"svelte-preprocess": "^6.0.0",
		"tailwindcss": "^3.1.8",
		"typescript": "^5.3.3",
		"unist-util-visit": "^3.1.0",
		"vite": "^5.0.3",
		"vite-bundle-analyzer": "^1.1.0",
		"vite-node": "^3.2.4",
		"vite-plugin-compression2": "^2.2.0",
		"vitest": "^3.2.4"
	},
	"type": "module",
	"lint-staged": {
		"*.{js,ts}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.svelte": [
			"prettier --write --plugin=prettier-plugin-svelte",
			"eslint --fix"
		],
		"*.{json,md,css,html}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@vercel/analytics": "^1.3.1",
		"@vercel/speed-insights": "^1.0.12",
		"clsx": "^1.2.1",
		"date-fns": "^2.29.1",
		"github-slugger": "^2.0.0",
		"gray-matter": "^4.0.3",
		"heroicons-svelte": "^0.0.1",
		"js-yaml": "^4.1.0",
		"node-html-parser": "^5.4.1",
		"reading-time": "^1.5.0"
	}
}
