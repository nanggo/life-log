{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "routes": [
    {
      "src": "/posts/(.*\\.(png|jpg|jpeg|gif|webp|avif|svg))",
      "dest": "/posts/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/_app/immutable/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/api/posts-metadata",
      "headers": {
        "Cache-Control": "public, max-age=600, s-maxage=1800, stale-while-revalidate=3600"
      }
    },
    {
      "src": "/api/images",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(sitemap.xml|rss.xml)",
      "headers": {
        "Cache-Control": "public, max-age=3600, s-maxage=7200"
      }
    },
    {
      "src": "/favicon.ico",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "src": "/posts/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/post/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=0, s-maxage=86400, stale-while-revalidate=86400"
      }
    },
    {
      "src": "/posts(.*)",
      "headers": {
        "Cache-Control": "public, max-age=300, s-maxage=3600, stale-while-revalidate=86400"
      }
    },
    {
      "src": "/(.*)",
      "headers": {
        "X-Frame-Options": "DENY",
        "X-Content-Type-Options": "nosniff",
        "Referrer-Policy": "strict-origin-when-cross-origin",
        "Permissions-Policy": "camera=(), microphone=(), geolocation=()",
        "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline' va.vercel-scripts.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: github.com avatars.githubusercontent.com user-images.githubusercontent.com user-attachments.githubusercontent.com private-user-images.githubusercontent.com camo.githubusercontent.com; font-src 'self'; connect-src 'self' vitals.vercel-insights.com; frame-ancestors 'none';"
      }
    }
  ]
}
